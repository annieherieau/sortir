{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block main %}
    {% set u = app.user %}
    <h2>Mon Profil</h2>
    <div class="d-flex">
        <div class="m-2">
            <div class="" style="width: 300px;">
                <img class="img-thumbnail border-0" src="{{ asset('img/user-placeholder.jpg') }}" size="50"
                     alt="Photo de profil">
            </div>
        </div>
        <div class="w-100 m-2">
            {{ form_start(form) }}
            <fieldset class="border p-3 mb-3">
                <legend>Informations personnelles</legend>

                <div class="d-flex m-2">
                    <label for="campus" class="w-25 col-form-label">Campus</label>
                    {{ form_widget(form.campus) }}
                    {{ form_errors(form.campus) }}
                </div>

                <div class="d-flex m-2">
                    <label for="pseudo" class="w-25 col-form-label">Pseudo</label>
                    {{ form_widget(form.pseudo) }}
                    {{ form_errors(form.pseudo) }}
                </div>

                <div class="d-flex m-2">
                    <label for="prenom" class="w-25 col-form-label">Prénom</label>
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>

                <div class="d-flex m-2">
                    <label for="nom" class="w-25 col-form-label">Nom</label>
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="d-flex m-2">
                    <label for="phone_number" class="w-25 col-form-label">Téléphone</label>
                    {{ form_widget(form.phoneNumber) }}
                    {{ form_errors(form.phoneNumber) }}
                </div>

                <div class="d-flex m-2">
                    <label for="email" class="w-25 col-form-label">Email</label>
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="d-flex m-2">
                    <label for="current_password" class="w-25 col-form-label">Mot de passe actuel</label>
                    {{ form_widget(form.current_password) }}
                    {{ form_errors(form.current_password) }}
                </div>

                <div class="d-flex m-2">
                    <label for="photo" class="w-25 col-form-label">Ma photo</label>
                    <div class="w-100">
                        <a class="btn btn-outline-primary w-100" href="#" role="button">Télécharger</a>
                    </div>
                </div>

                <div class="m-2 mt-4">
                    <div class="">
                        <input type="submit" class="btn btn-lg btn-primary w-100" value="Enregistrer"
                               id="update_profile"></div>
                </div>
            </fieldset>

            {{ form_end(form) }}
        </div>

    </div>
    <div class="w-75 float-end m-auto">


    {{ form_start(pwdForm) }}
    <fieldset class="border p-3">
        <legend>Modifier mon Mot de passe</legend>

        {{ form_row(pwdForm.current_password) }}
        {{ form_errors(pwdForm.current_password) }}
        {{ form_row(pwdForm.password) }}
        {{ form_errors(pwdForm.password) }}

        <div class="mt-2">
            <div class="">
                <input type="submit" class="btn btn-lg btn-primary w-100" value="Enregistrer"
                       id="update_profile"></div>
        </div>
    </fieldset>
    {{ form_end(pwdForm) }}
    </div>
{% endblock %}

