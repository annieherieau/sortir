{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block main %}
    {% set u = app.user %}
    <h2>Mon Profil</h2>
    <div class="d-flex">
        <div class="m-2">
            <div class="" style="width: 300px;">
                <img class="img-thumbnail border-0" src="{{ asset('img/user-placeholder.jpg') }}" size="50"
                     alt="Photo de profil">
            </div>
        </div>
        <div class="w-100 m-2">
            {{ form_start(form) }}
            <fieldset class="border p-3 mb-3">
                <legend>Informations personnelles</legend>
                <div class="mt-3">
                    {{ form_label(form.campus) }}
                    {{ form_widget(form.campus) }}
                    {{ form_errors(form.campus) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.pseudo) }}
                    {{ form_widget(form.pseudo) }}
                    {{ form_errors(form.pseudo) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.phoneNumber) }}
                    {{ form_widget(form.phoneNumber) }}
                    {{ form_errors(form.phoneNumber) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.current_password) }}
                    {{ form_widget(form.current_password) }}
                    {{ form_errors(form.current_password) }}
                </div>
                <div class="d-flex mt-3">
                    <label for="photo" class="w-25 col-form-label">Ma photo</label>
                    <div class="w-100">
                        <a class="btn btn-outline-primary w-100" href="#" role="button">Télécharger</a>
                    </div>
                </div>

                <div class="mt-4">
                    <input type="submit" class="btn btn-lg btn-primary w-100" value="Enregistrer"
                           id="sumbit_profile">
                </div>
            </fieldset>

            {{ form_end(form) }}
        </div>

    </div>
    <div class="w-75 float-end m-auto">

        {{ form_start(pwdForm) }}
        <fieldset class="border p-3">
            <legend>Modifier mon Mot de passe</legend>

            <div class="mt-3">
                {{ form_label(pwdForm.current_password) }}
                {{ form_widget(pwdForm.current_password) }}
            </div>
            <div class="mt-3">
                {{ form_widget(pwdForm.password) }}
            </div>

            <div class="mt-3">
                <div class="">
                    <input type="submit" class="btn btn-lg btn-primary w-100" value="Enregistrer"
                           id="submit_pasword"></div>
            </div>
        </fieldset>
        {{ form_end(pwdForm) }}
        <small class="required-before">Champs obligatoires</small>
    </div>
{% endblock %}

